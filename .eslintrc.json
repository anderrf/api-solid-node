{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "@rocketseat/eslint-config/node",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": "off",
        "no-useless-constructor": "off"
    },
    "[prisma]*": {
        "editor.formatOnSave": true
    }
}
